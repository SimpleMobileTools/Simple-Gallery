<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/write_permissions_dialog_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin">

    <com.simplemobiletools.commons.views.MyTextView
        android:id="@+id/write_permissions_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin"
        android:text="@string/confirm_storage_access_text"/>

    <ImageView
        android:id="@+id/write_permissions_dialog_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.simplemobiletools.commons.views.MyTextView
        android:id="@+id/write_permissions_dialog_text_sd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin"
        android:layout_marginTop="@dimen/activity_margin"
        android:text="@string/confirm_storage_access_text_sd"/>

    <ImageView
        android:id="@+id/write_permissions_dialog_image_sd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
